{
  "extends": "next/core-web-vitals",
  "rules": {
    // Consistently import navigation APIs from `lib/navigation`
    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from `lib/navigation` instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from `lib/navigation` instead."
      }
    ]
  }
}

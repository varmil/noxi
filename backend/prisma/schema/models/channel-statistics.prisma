model ChannelSubscriberCountSummary {
    id        BigInt   @id
    channelId String
    count     Int
    createdAt DateTime @default(now()) @db.Timestamptz(3)
    channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

    @@index([channelId, createdAt, count])
}


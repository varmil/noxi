{
  "priority": 99,
  "taskGroups": {
    "taskSpec": {
      "runnables": [
        {
          "container": {
            "imageUri": "us-west1-docker.pkg.dev/noxi-production/noxi/apps/update-chats:latest"
          }
        }
      ],
      "maxRetryCount": 1,
      "lifecyclePolicies": [
        {
          "action": "RETRY_TASK",
          "actionCondition": {
            "exitCodes": [50001]
          }
        }
      ],
      "computeResource": {
        "cpuMilli": 2000,
        "memoryMib": 1000
      },
      "environment": {
        "variables": {
          "ENV_NAME": "production",
          "NO_COLOR": "true"
        }
      }
    },
    "taskCount": 1
  },
  "allocationPolicy": {
    "instances": {
      "policy": {
        "machineType": "e2-micro",
        "provisioningModel": "SPOT"
      }
    }
  },
  "logsPolicy": {
    "destination": "CLOUD_LOGGING"
  }
}

{
  "name": "backend",
  "private": true,
  "scripts": {
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "//": "--------------------------------------------------",
    "dev": "nest start --watch",
    "build": "nest build --webpack",
    "prod": "node dist/apps/closed-api-server/main",
    "//": "--------------------------------------------------",
    "dev:standalone:001": "nest start --watch hololive-save-aggregations-by-channel",
    "build:standalone:001": "nest build --webpack hololive-save-aggregations-by-channel",
    "prod:standalone:001": "node dist/apps/hololive-save-aggregations-by-channel/main",
    "//": "--------------------------------------------------",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/closed-api-server/test/jest-e2e.json"
  },
  "dependencies": {
    "@googleapis/youtube": "^19.0.0",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "@prisma/client": "^5.17.0",
    "axios": "^1.7.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.12",
    "firebase-admin": "^12.3.0",
    "prisma-json-types-generator": "^3.0.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.10",
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.7.6",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.14.13",
    "@types/supertest": "^6.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.4.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app(|/.*)$": "<rootDir>/libs/application/$1",
      "^@domain(|/.*)$": "<rootDir>/libs/domain/$1",
      "^@infra(|/.*)$": "<rootDir>/libs/infrastructure/$1"
    }
  }
}

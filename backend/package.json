{
  "name": "backend",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate --schema prisma/schema",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "dev": "nest start --watch",
    "build": "nest build --webpack",
    "prod": "node dist/apps/closed-api-server/main",
    "prisma:dev": "prisma migrate dev --schema prisma/schema",
    "prisma:deploy": "prisma migrate deploy --schema prisma/schema",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "test:e2e": "jest -runInBand --silent",
    "app": "zx ./scripts/standalone-apps/factory.mjs"
  },
  "dependencies": {
    "@googleapis/youtube": "^29.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@prisma/client": "^6.18.0",
    "@ubie/nslog": "^1.2.1",
    "axios": "^1.10.0",
    "bignumber.js": "^9.3.0",
    "cache-manager": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "dayjs": "^1.11.13",
    "fast-xml-parser": "^5.2.5",
    "firebase-admin": "^13.4.0",
    "keyv": "^5.3.4",
    "passport-jwt": "^4.0.1",
    "prisma-json-types-generator": "^3.6.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.2",
    "stripe": "^19.2.0",
    "twitter-api-v2": "^1.23.2",
    "xss": "^1.0.15",
    "zod": "^4.1.12",
    "zx": "^8.6.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.9",
    "@swc/jest": "^0.2.38",
    "@types/compression": "^1.8.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "./scripts/jest/jest.setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".controller.ts",
      ".module.ts",
      ".dto.ts",
      ".e2e-spec.ts"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@presentation(|/.*)$": "<rootDir>/apps/closed-api-server/src/presentation/$1",
      "^@app(|/.*)$": "<rootDir>/libs/application/$1",
      "^@domain(|/.*)$": "<rootDir>/libs/domain/$1",
      "^@infra(|/.*)$": "<rootDir>/libs/infrastructure/$1",
      "^@prisma/generated/client$": "<rootDir>/prisma/generated/client"
    }
  }
}

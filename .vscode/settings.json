{
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "tailwindCSS.experimental.classRegex": [
    // const aClass = 'text-slate'
    // const bClass   = `text-zinc-300`
    // const cClassName =   "text-red-400"
    "Class\\s*=\\s*['\"`]([^'\"`]*)['\"`]",
    "ClassName\\s*=\\s*['\"`]([^'\"`]*)['\"`]",
    "tw\\s*=\\s*['\"`]([^'\"`]*)['\"`]"
  ],

  "typescript.preferences.importModuleSpecifier": "non-relative",
  "eslint.workingDirectories": ["./web", "./backend"],
  "eslint.useFlatConfig": true,

  "files.associations": {
    "*.css": "tailwindcss"
  },
  "exportall.config.folderListener": [
    "/backend/libs/infrastructure/service/youtube-data-api",
    "/backend/libs/infrastructure/service/youtube-data-api/search-videos",
    "/backend/libs/infrastructure/service/youtube-data-api/search-channels",
    "/backend/libs/infrastructure/service/youtube-data-api/channels",
    "/backend/libs/domain/youtube/channel",
    "/backend/libs/domain/youtube/video",
    "/backend/libs/domain/youtube/channel/branding-settings",
    "/backend/libs/domain/youtube/playlist",
    "/backend/libs/domain/youtube/country",
    "/backend/libs/domain/youtube/xml",
    "/backend/libs/domain/country",
    "/backend/libs/domain/stream",
    "/backend/libs/domain/youtube/datetime",
    "/backend/libs/domain/group",
    "/backend/libs/domain/stream-stats/viewer",
    "/backend/libs/domain/stream-stats/count",
    "/backend/libs/domain/youtube/api",
    "/backend/libs/domain/youtube/live-chat-message",
    "/backend/libs/domain/chat-bundle",
    "/backend/libs/domain/supers"
  ],
  "exportall.config.relExclusion": [
    "/backend/libs/infrastructure/service/youtube-data-api/lib/VideoTranslator.ts",
    "/backend/libs/infrastructure/service/youtube-data-api/channels/ChannelTranslator.ts",
    "/backend/libs/infrastructure/service/youtube-data-api/playlist-items/PlaylistItemAPISchema.ts",
    "/backend/libs/infrastructure/service/youtube-data-api/channels/ChannelAPISchema.ts",
    "/backend/libs/domain/stream-stats"
  ]
}
